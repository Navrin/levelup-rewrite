{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noLib": false,
        "outDir": "dist",
        "sourceMap": true,
        "noUnusedLocals": true,
        "pretty": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es6",
            "es7",
            "dom"
        ]
    },
    "include": [
        "src/**/**.*",
        "tests/**/**.*"
    ],
    "exclude": [
        "node_modules"
    ]
}